<style type="text/css">
.post-body2{

	border: 2px solid blues;

	margin-left: 0;

	background-color: white;
}

</style>

<div class="media-body">
	<strong class="anchor-username"><h4 class="media-heading"> <%= comment.user.name %></h4></strong> 
	<p class="anchor-time"><%= comment.created_at %></p >
</div>
<div class="post-body2">
	<p>
		<h5><%= comment.message %></h5>
	</p>


	<p>
		<%= link_to 'Destroy Comment', [comment.post, comment],
		method: :delete,
		data: { confirm: 'Are you sure?' } %>
	</p>

</div>