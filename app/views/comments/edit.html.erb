<div class="main">
<center>
	<h1> Edit Comment </h1>
</center>

<%= form_for ([@comment.post, @comment]) do |f| %>
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message , class: "form-control"%>
  </p>
  <p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', post_comments_path %>
</div>
<div class="sidenav">
  <h3 style="color: red;">Messages</h3>
  <% @users.each do |user| %>
  <a <%= link_to user.name, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></a>
     <br>
  <% end %>

</div>
