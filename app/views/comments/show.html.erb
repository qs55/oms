 <div class="main">
<p>
  <strong>User Name</strong>
  <%= current_user.name %>
</p>
 
<p>
  <strong>Post Title</strong>
  <%= @comment.post.title %>
</p>
 
 <p>
  <strong>Comment Content</strong>
  <%= @comment.message %>
</p>

 <p>

<%= link_to 'Edit', edit_post_comment_path(@comment) %> |
<%= link_to 'Back', post_comments_path %>
</p>
</div>
<div class="sidenav">
  <h3 style="color: red;">Messages</h3>
  <% @users.each do |user| %>
  <a <%= link_to user.name, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></a>
     <br>
  <% end %>

</div>
