<div class="main">
<center>
	<h1>All Organizations</h1>
</center>

<table class="table table-dark table-striped">
  <thead style="background-color: rosybrown;" >
  <tr>
    <th>Manager Name</th>
    <th>Organization Name </th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Address</th>
    <th>Phone</th>
    <th colspan="4"></th>
  </tr>
</thead>
 
    <tr>
      <td><%= @organizations.user.name %></td>
      <td><strong><%= @organizations.name %></strong></td>
      <td><%= @organizations.city %></td>
      <td><%= @organizations.state%></td>
      <td><%= @organizations.country%></td>
      <td><%= @organizations.address%></td>
      <td><%= @organizations.phone%></td>
      <% if current_user.user_type=="manager" %>
      <td><%= link_to 'View all employees', users_path %></td>
      <td><%= link_to 'Show', organization_path(@organizations) %></td>
      <td><%= link_to 'Edit',  edit_organization_path(@organizations) %></td>
      <td><%= link_to 'Destroy', organization_path(@organizations),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>

    </tr>
</table>
<%= link_to 'Back', users_path, {:class => :btn} %>
</div>

</div>

 <div class="sidenav">
    <h3 style="color: red;">Messages</h3>
    <% @users.each do |user| %>
    <a <%= link_to user.name, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></a>

    <% end %>

</div>