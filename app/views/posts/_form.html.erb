<%= form_for [@user, Post.new] do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

    <p>
    <%= f.hidden_field :product_id, :value => "active" %>
  </p>

    <p>
    <%= f.label :picture %><br>
    <%= f.file_field :picture, id: :post_picture %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>