<style type="text/css">
  .btn {
    background-color: darkslategrey;
  }
</style>
<div class="main">

<%= link_to 'New Post', new_post_path ,{:class => :btn , :style => {:background => :dark}} %>

<center>
	<h1>All Posts</h1>
</center>
<% i=0 %>
<table class="table table-dark table-striped">
  <thead style="background-color: rosybrown;" >
  <tr>
    <th scope="col">#</th>
    <th>User Name</th>
    <th>Title </th>
    <th>Post Body</th>
    <th>Status</th>
    <th colspan="3">Options</th>
  </tr>
 </thead>
 
  <% @posts.each do |post| %>
    <tr>
         <th scope="row"><%= i=i+1 %></th>
      <td><%= current_user.name %></td>
      <td><strong><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.status%></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit',  edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>

<%= link_to 'Back', users_path ,{:class => :btn , :style => {:background => :dark}} %>
</div>

 <div class="sidenav">
    <h3 style="color: red;">Messages</h3>
    <% @users.each do |user| %>
    <a <%= link_to user.name, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></a>

    <% end %>

</div>