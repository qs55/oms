<div class="main">
<center>
	<h1>User Details</h1>
</center> 

<table  class="table table-dark">
   <thead style="background-color: rosybrown;" >
  <tr>
    <th
    <th>Full Name </th>
    <th>Role </th>
    <th>Email</th>

  </tr>
</thead>
 
 
    <tr>
      <td><%= @user.name %></td>
      <td><strong><%= @user.user_type %></strong></td>
      <td><%= @user.email %></td>

    </tr>
</table>


<h2>Posts</h2>
<%= render @user.posts %>

<%= link_to 'Back', users_path,{:class => :btn , :style => {:background => :dark}} %>


</div>

 <div class="sidenav">
    <h3 style="color: red;">Messages</h3>
    <% @users.each do |user| %>
    <a <%= link_to user.name, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></a>

    <% end %>

</div>